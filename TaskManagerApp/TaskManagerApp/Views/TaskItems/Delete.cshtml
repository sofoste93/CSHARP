@model TaskManagerApp.Models.TaskItem
@{
    ViewData["Title"] = "Supprimer la tâche";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-warning">
    <h4>Es-tu sûr de vouloir supprimer cette tâche ?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Titre</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
