@model TaskManagerApp.Models.TaskItem
@{
    ViewData["Title"] = "Détails de la tâche";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-2">Titre</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Créé le</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToLocalTime().ToString("f")</dd>

    <dt class="col-sm-2">Statut</dt>
    <dd class="col-sm-10">@((Model.IsCompleted) ? "Terminé" : "Ouvert")</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Éditer</a>
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
</p>
