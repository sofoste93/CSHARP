@model TaskManagerApp.Models.TaskItem
@{
    ViewData["Title"] = "Détails de la tâche";
}

<div class="container my-4">
    <h2 class="mb-4">
        <i class="bi bi-info-circle"></i> @ViewData["Title"]
    </h2>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="card-title mb-4">@Model.Title</h4>
            
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Titre</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3 fw-bold">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 fw-bold">Créé le</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 fw-bold">Statut</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.IsCompleted ? "bg-success" : "bg-warning text-dark")">
                        @(Model.IsCompleted ? "Terminé" : "Ouvert")
                    </span>
                </dd>
            </dl>

            <hr />
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Éditer
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Retour
                </a>
            </div>
        </div>
    </div>
</div>